<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.QuitGameSubSceneController">
   <children>
      <Pane fx:id="grayPane" onMouseClicked="#clickBack" opacity="0.8" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: gray;" />
      <Pane fx:id="quitPane" layoutX="465.0" layoutY="260.0" prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: white; -fx-border-color: black;">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="350.0">
               <children>
                  <Label styleClass="quit" stylesheets="@FontStyle.css" text="Quit Game?" wrapText="true">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                     <children>
                        <Button fx:id="yesLeave" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleLeave" prefWidth="70.0" styleClass="territoryLabels" stylesheets="@FontStyle.css" text="Yes" />
                        <Button fx:id="noLeave" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#clickBack" prefWidth="70.0" styleClass="territoryLabels" stylesheets="@FontStyle.css" text="No" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
